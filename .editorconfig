# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,sass,css,scss,html,php}]
charset = utf-8
indent_style = tab
indent_size = 4

[{**.json}]
indent_style = tab
indent_size = 2